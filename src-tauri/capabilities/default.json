{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Main window capability",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:default",
    "dialog:default",
    {
      "identifier": "dialog:allow-open",
      "allow": [{"path": "**/*"}]
    },
    "shell:allow-open",
    "opener:default"
  ]
}
